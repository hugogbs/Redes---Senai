				int i = 0;
				try {	
					while (verificaLogin(players.get(i)));
					i++;	
				} catch (Exception e) {
					JOptionPane.showMessageDialog(null, "Usuário e/ou senha inválidos.\nVerifique os campos preenchidos ou entre contato\ncom o administrador do sistema para obter acesso.");
				}

			}

